---
// No changes needed to the script part
interface Props {
  search: boolean;
  path: string;
}

const { search, path = "." } = Astro.props;
---

<nav class="bg-[#00bbff] flex h-12 px-2 justify-between">
 
  <div class="flex w-full items-center justify-start">
    <!-- New SVG Button for Google on the left -->
    <a href="https://www.google.com" target="_blank" class="w-10 h-10 flex items-center justify-center text-white hover:bg-gray-700 rounded-lg">
      <svg class="w-6 h-6" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
        <path stroke-linecap="round" stroke-linejoin="round" d="M12 4v16m8-8H4"/>
      </svg>
      <span class="sr-only">Go to Google</span>
    </a>
 
  <div class="flex w-full items-center justify-center">
    <a href={path} class="max-sm:h-10 h-12 ">
      <img src={`https://cdn.glitch.global/89fcef82-41a8-4a32-bcf5-f37756d28042/logo.svg?v=1726979996647`} class="h-full">
    </a>

    <!-- Inputs are removed from here -->
  </div>
  
  <ul class="flex place-items-center gap-4 text-white justify-center max-md:hidden">
    <li>
      <a href={`${path}/`} class="hover:text-zinc-300">Home</a>
    </li>
    <li>
      <a href={`${path}/about`} class="hover:text-zinc-300">About</a>
    </li>
  </ul>

  <button type="button" class="self-center inline-flex items-center w-10 h-10 justify-center text-sm rounded-lg md:hidden focus:outline-none focus:ring-2  text-white hover:bg-gray-700 focus:ring-gray-600" onclick="document.getElementById('mob-nav').classList.toggle('hidden');">
    <span class="sr-only">Open main menu</span>
    <svg class="w-5 h-5" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 17 14">
      <path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M1 1h15M1 7h15M1 13h15"/>
    </svg>
  </button>
</nav>

<ul class="flex place-items-center gap-4 bg-zinc-800 text-white justify-between text-lg hidden" id="mob-nav">
  <li class="p-2 m-2 bg-zinc-700 rounded-md">
    <a href="./" class="hover:text-zinc-300">Home</a>
  </li>
  <li class="p-2 m-2 bg-zinc-700 rounded-md">
    <a href="./about" class="hover:text-zinc-300">About</a>
  </li>
  <li class="p-2 m-2 bg-zinc-700 rounded-md">
    <a href="" class="hover:text-zinc-300">
      Contribute
    </a>
  </li>
</ul>
